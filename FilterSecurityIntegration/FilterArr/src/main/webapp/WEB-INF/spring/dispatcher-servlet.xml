<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven />
    <context:component-scan base-package="com.example" />

    <!-- View Resolver -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <!-- Register the custom filter chain manager -->
    <bean id="customFilterChainManager" class="com.example.filterIntigration.filter.CustomFilterChainManager" />

    <!-- Register all individual filters as Spring beans -->
    <bean id="f1Filter" class="com.example.filterIntigration.filter.Filter1" />
    <bean id="f2Filter" class="com.example.filterIntigration.filter.Filter2" />
    <bean id="userFilter1" class="com.example.filterIntigration.filter.user.UserFilter1" />
    <bean id="userFilter2" class="com.example.filterIntigration.filter.user.UserFilter2" />
    <bean id="adminFilter1" class="com.example.filterIntigration.filter.admin.AdminFilter1" />
    <bean id="adminFilter2" class="com.example.filterIntigration.filter.admin.AdminFilter2" />

    <!-- Spring Interceptors -->
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/user/**"/>
            <mvc:mapping path="/admin/**"/>
            <bean class="com.example.filterIntigration.interceptor.AuthInterceptor" />
        </mvc:interceptor>
    </mvc:interceptors>

</beans>